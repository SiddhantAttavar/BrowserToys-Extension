{
	"manifest_version": 2,
	"name": "BrowserToys",
	"description": "Provides various browser scripts",
	"version": "1.0.0",
	"permissions": ["tabs", "declarativeContent", "activeTab"],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scrpts": [
	{
		"matches": ["<all_urls>"],
		"js": ["xkcdReplace.js"],
		"exclude_globs": [ "*options*"]
	},
		{
			"matches": ["https://www.youtube.com/*", "https://music.youtube.com/*"],
			"js": ["autoconfirm.js"],
			"run_at": "document_end"
		}
	],
	"incognito": "split",
	"browser_action": {
		"default_title": "BrowserToys"
	},
	"icons": {"128": "icon.png"},
	"commands": {
		"new-tab-here": {
			"suggested_key": {
				"default": "Ctrl+T",
				"mac": "MacCtrl+T"
			},
			"description": "Open a new tab next to the current one"
		}
	}
}
i
