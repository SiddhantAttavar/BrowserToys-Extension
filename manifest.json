{
	"manifest_version": 2,
	"name": "BrowserToys",
	"description": "Provides various browser scripts",
	"version": "1.2",
	"permissions": [],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["xkcdReplace.js"],
			"exclude_globs": ["*options*"],
			"exclude_matches": [
				"*://*.linkedin.com/*"
			]
		},
		{
			"matches": ["https://www.youtube.com/*", "https://music.youtube.com/*"],
			"js": ["autoconfirm.js"],
			"run_at": "document_end"
		}
	],
	"browser_action": {
		"default_icon": "icon.svg",
		"default_title": "BrowserToys"
	},
	"icons": {"128": "icon.png"}
}

